---
interface Props {
  role: string;
  company: string;
  period: string;
  description: string;
  highlights?: string[];
}

const { role, company, period, description, highlights = [] } = Astro.props;
---

<article class="experience-item">
  <div class="experience-header">
    <div class="experience-main">
      <h3 class="role">{role}</h3>
      <p class="company">{company}</p>
    </div>
    <span class="period">{period}</span>
  </div>
  <p class="description">{description}</p>
  {
    highlights.length > 0 && (
      <ul class="highlights">
        {highlights.map((item) => (
          <li>{item}</li>
        ))}
      </ul>
    )
  }
</article>

<style>
  .experience-item {
    padding: var(--space-lg);
    background: var(--color-bg-card);
    border: 1px solid var(--color-border-subtle);
    border-radius: var(--radius-md);
    transition: all var(--transition-base);
    position: relative;
    overflow: hidden;
  }

  .experience-item::before {
    content: "";
    position: absolute;
    left: 0;
    top: 0;
    bottom: 0;
    width: 3px;
    background: linear-gradient(180deg, var(--color-accent), var(--color-accent-secondary));
    opacity: 0;
    transition: opacity var(--transition-base);
  }

  .experience-item:hover {
    border-color: var(--color-border);
  }

  .experience-item:hover::before {
    opacity: 1;
  }

  .experience-header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    gap: var(--space-md);
    margin-bottom: var(--space-md);
    flex-wrap: wrap;
  }

  .experience-main {
    flex: 1;
    min-width: 200px;
  }

  .role {
    font-size: 1.2rem;
    font-weight: 500;
    color: var(--color-text-primary);
    margin-bottom: var(--space-xs);
  }

  .company {
    font-family: var(--font-display);
    font-size: 0.9rem;
    color: var(--color-accent);
    font-weight: 400;
  }

  .period {
    font-family: var(--font-display);
    font-size: 0.8rem;
    color: var(--color-accent-tertiary);
    text-transform: uppercase;
    letter-spacing: 0.03em;
    padding: var(--space-xs) var(--space-sm);
    background: color-mix(in srgb, var(--color-accent-tertiary) 10%, transparent);
    border: 1px solid color-mix(in srgb, var(--color-accent-tertiary) 20%, transparent);
    border-radius: var(--radius-sm);
  }

  .description {
    color: var(--color-text-secondary);
    margin-bottom: var(--space-md);
  }

  .highlights {
    list-style: none;
    display: flex;
    flex-direction: column;
    gap: var(--space-sm);
  }

  .highlights li {
    position: relative;
    padding-left: var(--space-lg);
    color: var(--color-text-secondary);
    font-size: 0.95rem;
  }

  .highlights li::before {
    content: "â€º";
    position: absolute;
    left: 0;
    color: var(--color-accent);
    font-weight: 700;
    font-size: 1.2rem;
    line-height: 1.4;
  }
</style>

