---
interface Props {
  name: string;
  title: string;
  summary: string;
}

const { name, title, summary } = Astro.props;
---

<header class="header">
  <div class="header-content">
    <h1 class="name">{name}</h1>
    <p class="title">{title}</p>
    <div class="divider"></div>
    <p class="summary">{summary}</p>
    <a
      href={`${import.meta.env.BASE_URL}NtagiannisIasonas_CV.pdf`}
      download
      class="download-btn"
    >
      <svg
        class="download-icon"
        viewBox="0 0 24 24"
        fill="none"
        stroke="currentColor"
        stroke-width="2"
      >
        <path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4"></path>
        <polyline points="7 10 12 15 17 10"></polyline>
        <line x1="12" y1="15" x2="12" y2="3"></line>
      </svg>
      Download CV
    </a>
  </div>
</header>

<style>
  .header {
    padding: var(--space-4xl) var(--container-padding) var(--space-3xl);
    text-align: center;
    background: var(--color-bg);
    border-bottom: 1px solid var(--color-border-subtle);
    position: relative;
    overflow: hidden;
  }

  .header::after {
    content: "";
    position: absolute;
    inset: 0;
    background:
      radial-gradient(
        ellipse at 20% 0%,
        var(--color-accent) 0%,
        transparent 50%
      ),
      radial-gradient(
        ellipse at 80% 100%,
        var(--color-accent-secondary) 0%,
        transparent 50%
      );
    opacity: var(--glow-opacity);
    pointer-events: none;
  }

  .header::before {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 2px;
    background: linear-gradient(
      90deg,
      var(--color-accent),
      var(--color-accent-secondary),
      var(--color-accent-tertiary)
    );
  }

  .header-content {
    max-width: var(--container-max);
    margin: 0 auto;
    position: relative;
  }

  .name {
    font-family: var(--font-display);
    font-size: clamp(2rem, 7vw, 3.5rem);
    font-weight: 700;
    letter-spacing: -0.02em;
    margin-bottom: var(--space-sm);
    background: linear-gradient(
      135deg,
      var(--color-accent) 0%,
      var(--color-accent-secondary) 50%,
      var(--color-accent-tertiary) 100%
    );
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .title {
    font-family: var(--font-display);
    font-size: 1rem;
    font-weight: 400;
    color: var(--color-accent);
    text-transform: uppercase;
    letter-spacing: 0.15em;
    margin-bottom: var(--space-xl);
    padding: var(--space-xs) var(--space-md);
    border: 1px solid var(--color-border);
    display: inline-block;
    border-radius: var(--radius-sm);
    background: var(--color-bg-card);
  }

  .divider {
    width: 80px;
    height: 3px;
    background: linear-gradient(
      90deg,
      var(--color-accent),
      var(--color-accent-secondary)
    );
    margin: 0 auto var(--space-xl);
    border-radius: 2px;
  }

  .summary {
    font-size: 1.1rem;
    font-weight: 300;
    color: var(--color-text-secondary);
    max-width: 600px;
    margin: 0 auto var(--space-xl);
    line-height: 1.8;
  }

  .download-btn {
    display: inline-flex;
    align-items: center;
    gap: var(--space-sm);
    padding: var(--space-sm) var(--space-lg);
    font-family: var(--font-display);
    font-size: 0.9rem;
    font-weight: 400;
    color: var(--color-bg);
    background: linear-gradient(
      135deg,
      var(--color-accent),
      var(--color-accent-secondary)
    );
    border-radius: var(--radius-md);
    text-decoration: none;
    transition: all var(--transition-base);
  }

  .download-btn:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 24px
      color-mix(in srgb, var(--color-accent) 30%, transparent);
    color: var(--color-bg);
  }

  .download-icon {
    width: 18px;
    height: 18px;
  }
</style>
