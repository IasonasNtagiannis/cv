---
interface Props {
  degree: string;
  institution: string;
  period?: string;
  description?: string;
}

const { degree, institution, period, description } = Astro.props;
---

<article class="education-item">
  <div class="education-header">
    <div class="education-main">
      <h3 class="degree">{degree}</h3>
      <p class="institution">{institution}</p>
    </div>
    {period && <span class="period">{period}</span>}
  </div>
  {description && <p class="description">{description}</p>}
</article>

<style>
  .education-item {
    padding: var(--space-lg);
    background: var(--color-bg-card);
    border: 1px solid var(--color-border-subtle);
    border-radius: var(--radius-md);
    transition: all var(--transition-base);
    position: relative;
    overflow: hidden;
  }

  .education-item::before {
    content: "";
    position: absolute;
    left: 0;
    top: 0;
    bottom: 0;
    width: 3px;
    background: linear-gradient(180deg, var(--color-accent-secondary), var(--color-accent-tertiary));
    opacity: 0;
    transition: opacity var(--transition-base);
  }

  .education-item:hover {
    border-color: var(--color-border);
  }

  .education-item:hover::before {
    opacity: 1;
  }

  .education-header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    gap: var(--space-md);
    flex-wrap: wrap;
  }

  .education-main {
    flex: 1;
    min-width: 200px;
  }

  .degree {
    font-size: 1.1rem;
    font-weight: 500;
    color: var(--color-text-primary);
    margin-bottom: var(--space-xs);
  }

  .institution {
    font-family: var(--font-display);
    font-size: 0.9rem;
    color: var(--color-accent-secondary);
  }

  .period {
    font-family: var(--font-display);
    font-size: 0.8rem;
    color: var(--color-accent-tertiary);
    text-transform: uppercase;
    letter-spacing: 0.03em;
    padding: var(--space-xs) var(--space-sm);
    background: color-mix(in srgb, var(--color-accent-tertiary) 10%, transparent);
    border: 1px solid color-mix(in srgb, var(--color-accent-tertiary) 20%, transparent);
    border-radius: var(--radius-sm);
  }

  .description {
    color: var(--color-text-secondary);
    margin-top: var(--space-md);
  }
</style>

